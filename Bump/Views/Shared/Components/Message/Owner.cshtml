@using Bump.Localization
@model Bump.VM.MessageVm
@inject IStringLocalizer< Shared > Localizer

@{
    Layout = "Components/Message/BaseMessage";
}

<form method="get" asp-controller="Message" asp-action="UpdateMessage">
    <div class="bump-container-xs">
        <button class="btn btn-outline-primary btn-sm" type="submit" name="id" value="@Model.Id">@Localizer[ "Edit" ]</button>
    </div>
</form>
<div class="bump-container-xs">
    <button class="btn btn-outline-danger btn-sm" onclick="deleteMessage(@Model.Id , '@Url.Action( "DeleteMessage" , "Message" )')">@Localizer[ "Delete" ]</button>
</div>