@model List<Entities.Theme>

@{
    ViewBag.Title = Strings["Search"];
    Layout = "_Layout";
}

<form asp-controller="Search" method="get" asp-action="Search">
    <div class="col-auto">
        <label for="query">@Strings["SearchHint"]</label>
    </div>
    <div class="form-group row">
        <div class="col-auto">
            <input id="query" type="text" name="query" class="form-control">
        </div>
        <div class="col-auto">
            <input type="submit" value="@Strings["Submit"]" class="btn btn-outline-primary">
        </div>
    </div>
</form>
<div id="themes">
    @foreach (var item in Model)
    {
        <a style="height: 100px; margin-left: 30px" href="@Url.Action("Theme", "Home", new {themeId = item.Id})">
            <div>@item.Name</div>
        </a>
    }
</div>