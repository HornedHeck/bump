@using Bump.Components
@model ThemeVM

@{
    ViewData["Title"] = Model.Title;
}

<div class="bump-container">
    <h3>@Model.Title</h3>
</div>
<hr/>
<div class="bump-container">
    <p>@Model.Content</p>
</div>
<hr/>
<div class="bump-container">
    <h4>Discussion</h4>
</div>
<hr/>
@if (Model.Messages.Count > 0)
{
    @foreach (var message in Model.Messages.SkipLast(1))
    {
        @await Component.InvokeAsync(typeof(Message), new {message = message})
        <hr/>
    }
    @await Component.InvokeAsync(typeof(Message), new {message = Model.Messages.Last()})
}
else
{
    <div class="bump-container">
        <p>No messages yet</p>
    </div>
}