@model RegistrationModel
@{
    ViewData["Title"] = "Registration";
    Layout = "UnsignedLayout";
}
<form style="padding-left: 20px" method="post" asp-controller="User" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br/>
        <input asp-for="Email"/>
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Name"></label><br/>
        <input asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br/>
        <input asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="Password2"></label><br/>
        <input asp-for="Password2"/>
        <span asp-validation-for="Password2"></span>
    </div>
    <div style="margin-top: 20px">
        <button class="btn btn-primary" type="submit">Register</button>
    </div>
</form>

<form method="get" asp-controller="User" asp-action="Login">
    <div style="margin-top: 20px; padding-left: 20px">
        <button class="btn btn-outline-primary" type="submit">Login</button>
    </div>
</form>